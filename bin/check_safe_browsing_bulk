set -e -o pipefail -o nounset

# Load API parameters from configuration file
. /etc/nagios-plugins/config/safe-browsing.conf

# Define variables
lockfile='/var/lock/nagios-plugins-cyb-check_safe_browsing_bulk'
outfile='/var/lib/nagios-plugins-cyb/check_safe_browsing_bulk.out'
error_msg=''
ok_msg=''
rc=0

# Lock
dotlockfile -r 0 -p $lockfile || exit

if ! which cybweb-vhostlist-minimal >/dev/null 2>/dev/null
then
    echo '2 Unable to find cybweb-vhostlist-minimal' > $outfile
    exit
fi

for url in $(cybweb-vhostlist-minimal)
do
    type=$(wget -q -O- "$api_url&url=$url" || true)

    if [ "$type" != '' ]
    then
	error_msg="$error_msg$url is flagged as $type. "
	rc=2
    else
	ok_msg="$ok_msg$url is OK. "
    fi
done

if [ -z "$ok_msg" -a -z "$error_msg" ]
then
    error_msg='No URL found in Apache configuration'
    rc=2
fi

echo "$rc $error_msg$ok_msg" > $outfile.tmp
mv $outfile.tmp $outfile

# Unlock
dotlockfile -u $lockfile
