set -e
set -o pipefail
rc=0

export PATH=$PATH:/sbin:/usr/sbin

# Check software RAID
for md in /dev/md*
do
    [ ! -e $md -o -d $md ] && continue

    if ! mdadm --detail --test $md >/dev/null 2>/dev/null
    then
	echo -n "$md: "
	mdadm --detail --test $md 2>&1 |grep faulty \
	    | sed -e s/.*faulty/faulty/g | tr -d "\n" || true
	echo -n '. '
	rc=2
    fi
done

# Check LSI RAID with mpt_status
if which mpt-status >/dev/null && grep -wFq mptctl /proc/modules
then 
    for status in $(mpt-status -s | awk '/^log_id / {print $3}')
    do
	echo -n "MPT status $status. "
	if [ "$status" != 'OPTIMAL' ]
	then
	    rc=2
	fi
    done
fi

echo
exit $rc
